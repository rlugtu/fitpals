<%- include('../partials/boilerplate') %>
<div class="registerContainer">
    <h1>Create an Account</h1>
    <form class="registerField" method='POST' action='/user'>
        <input name='name' type='text' placeholder='name' required />
        <input name='username' type='text' placeholder='username' required />
        <input name='email' type='email' placeholder='email' required />
        <input name='password' type='password' placeholder='password' required />
        <input name='location' type='text' placeholder='location' required />
        <input name='birthday' type='date' placeholder='birthday' required />
        <textarea name='about' type='about' placeholder='about'></textarea>
        <textarea name='hobbies' type='hobbies' placeholder='hobbies'></textarea>
        <div class="buttonDiv">
            <input type='submit' name="submit" value='Register' />
        </div>
    </form>
</div>


<%- include('../partials/end') %>