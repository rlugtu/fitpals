<%- include('../partials/boilerplate') %>
<div class="loginContainer">
    <h1>Create an Account</h1>
    <form class="loginField" method='POST' action='/user'>
        <input name='name' type='text' placeholder='name' required />
        <input name='username' type='text' placeholder='username' required />
        <input name='email' type='email' placeholder='email' required />
        <input name='password' type='password' placeholder='password' required />
        <input name='birthday' type='text' placeholder='birthday' required />
        <input name='about' type='about' placeholder='about' />
        <input name='hobbies' type='hobbies' placeholder='hobbies' />
        <div class="buttonDiv">
            <input type='submit' name="submit" value='Register' />
        </div>
    </form>
</div>


<%- include('../partials/end') %>